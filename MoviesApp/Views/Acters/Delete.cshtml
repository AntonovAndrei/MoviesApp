@model MoviesApp.ViewModels.DeleteActerViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Acter</h4>
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="LastName"></label>
            </dt>
        <dd class = "col-sm-10">
            @Model.LastName
            </dd>
        <dt class = "col-sm-2">
            <label asp-for="BirthdayDate"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.BirthdayDate.ToString("dd.MM.yyyy")
        </dd>
    </dl>
    <hr />

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>